<h1>ここはeditページです</h1>

<h1>Editing Book</h1>

<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |book| %>
  <div class = form>
    <p>Title</p>
    <%= book.text_field :title %>
  </div>

  <div class = form>
    <p>Body</p>
    <%= book.text_area :body %>
  </div>

  <div class = form>
    <%= book.submit 'Update Book' %>
  </div>

  <p>
    <%= link_to "Show", book_path(@book.id) %>
    ｜
    <%= link_to "Back", "/books" %>
  </p>

<% end %>