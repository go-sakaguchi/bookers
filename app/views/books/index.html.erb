<h1>ここはindexページです</h1>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "Show", "/books/#{book.id}" %>
        </td>
        <td>
          <%= link_to "Edit", "/books/#{book.id}/edit" %>
        </td>
        <td>
          <a href="/books">Destroy</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model: Book.new do |book| %>
  <div class = form>
    <p>Title</p>
    <%= book.text_field :title %>
  </div>

  <div class = form>
    <p>Body</p>
    <%= book.text_area :body %>
  </div>

  <div class = form>
    <%= book.submit 'Create Book' %>
  </div>
<% end %>