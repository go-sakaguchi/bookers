<h1>ここはindexページです</h1>
<h1>Books</h1>

<%= @books.each do |list| %>

  <p>タイトル</p>
  <span><%= list.title %></span>
  
<% end %>

<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
  <div class = form>
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  
  <div class = form>
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  
  <div class = form>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>